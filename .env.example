###############################
# DATABASE (LOCAL)
###############################
LOCAL_SPRING_DATASOURCE_USERNAME=root
LOCAL_SPRING_DATASOURCE_PASSWORD=

###############################
# REDIS
###############################
# REDIS_HOST=<redis-host>
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_WATCHING_SESSION_TTL=24h
CACHE_REDIS_ENABLED=true
# REDIS_SSL=true
REDIS_SSL=false

###############################
# KAFKA
###############################
# KAFKA_BOOTSTRAP_SERVERS=<kafka-bootstrap-servers>
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP_ID=mopl-consumer-group
# KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SASL_MECHANISM=PLAIN
# KAFKA_SASL_JAAS_CONFIG=org.apache.kafka.common.security.plain.PlainLoginModule required username="<kafka-username>" password="<kafka-password>";
KAFKA_SASL_JAAS_CONFIG=

###############################
# STORAGE
###############################
# STORAGE_TYPE=s3
STORAGE_TYPE=local
STORAGE_LOCAL_ROOT_PATH=.mopl/storage
STORAGE_LOCAL_BASE_URL=http://localhost:8080
STORAGE_S3_ACCESS_KEY=
STORAGE_S3_SECRET_KEY=
STORAGE_S3_REGION=ap-northeast-2
# STORAGE_S3_BUCKET=<s3-bucket-name>
STORAGE_S3_BUCKET=
STORAGE_S3_PRESIGNED_URL_EXPIRATION=24h
STORAGE_S3_ENDPOINT=

###############################
# ELASTICSEARCH
###############################
SEARCH_ENABLED=true
SEARCH_INDEX_RECREATE_ON_STARTUP=false
# SEARCH_ELASTICSEARCH_URIS=<elasticsearch-uris>
SEARCH_ELASTICSEARCH_URIS=http://localhost:9200
# SEARCH_ELASTICSEARCH_USERNAME=<elasticsearch-username>
SEARCH_ELASTICSEARCH_USERNAME=
# SEARCH_ELASTICSEARCH_PASSWORD=<elasticsearch-password>
SEARCH_ELASTICSEARCH_PASSWORD=
SEARCH_ELASTICSEARCH_CONNECT_TIMEOUT=1000
SEARCH_ELASTICSEARCH_SOCKET_TIMEOUT=3000

###############################
# JWT
###############################
# JWT_ACCESS_TOKEN_SECRET=<jwt-access-token-secret>
JWT_ACCESS_TOKEN_SECRET=your-super-secret-and-long-enough-access-key-123
JWT_ACCESS_TOKEN_PREVIOUS_SECRET=
# JWT_REFRESH_TOKEN_SECRET=<jwt-refresh-token-secret>
JWT_REFRESH_TOKEN_SECRET=your-super-secret-and-long-enough-refresh-key-456
JWT_REFRESH_TOKEN_PREVIOUS_SECRET=
JWT_REGISTRY_TYPE=redis

###############################
# OAUTH2
###############################
# GOOGLE_CLIENT_ID=<google-client-id>
