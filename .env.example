###############################
# ELASTIC SEARCH
###############################
MOPL_SEARCH_ENABLED=true

MOPL_SEARCH_INDEX_RECREATE_ON_STARTUP=false

MOPL_SEARCH_ELASTICSEARCH_URIS=localhost:9200
MOPL_SEARCH_ELASTICSEARCH_USERNAME=
